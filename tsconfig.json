{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "lib": ["ES2024"],
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "out",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".vscode-test"]
}
